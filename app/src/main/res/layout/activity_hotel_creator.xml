<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/hotelCreator"
    tools:context=".management.HotelCreatorActivity">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:tint="@color/black"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textHotelCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/inter_bold"
        android:text="Hotel Creator"
        android:textColor="@android:color/black"
        android:textSize="48sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/hotelNameLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textHotelCreate"
        android:layout_marginStart="46dp"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/white"
        app:boxBackgroundColor="@color/background_secondary"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:hintEnabled="false"
        app:startIconTint="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hotelNameInput"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/inter_regular"
            android:hint="Enter your hotel name"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addAddressBtn"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="313dp"
            android:layout_height="65dp"
            android:layout_below="@+id/hotelNameLayout"
            android:textColorHint="@color/white"
            android:text="Add address"
            android:backgroundTint="@color/light_secondary"
            app:boxStrokeColor="@color/white"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="46dp"
            android:fontFamily="@font/inter_regular"
            android:textSize="18sp"
            android:gravity="left|center_vertical" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addRoomsBtn"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="313dp"
            android:layout_height="65dp"
            android:layout_marginStart="46dp"
            android:textColorHint="@color/white"
            android:text="Add rooms"
            android:layout_below="@+id/addAddressBtn"
            android:backgroundTint="@color/light_secondary"
            app:boxStrokeColor="@color/white"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_regular"
            android:textSize="18sp"
            android:gravity="left|center_vertical">
        </com.google.android.material.button.MaterialButton>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="313dp"
        android:layout_height="50dp"
        android:layout_marginStart="46dp"
        app:cardBackgroundColor="@color/background_secondary"
        app:cardCornerRadius="6dp"
        app:cardElevation="10dp"
        android:layout_below="@+id/addRoomsBtn"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Select amentities"
                android:textColorHint="@color/white"
                android:fontFamily="@font/inter_regular"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down24"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveHotelBtn"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="313dp"
        android:layout_height="65dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="450dp"
        android:textColorHint="@color/white"
        android:text="Submit"
        android:backgroundTint="@color/black"
        app:boxStrokeColor="@color/white"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        android:fontFamily="@font/inter_bold"
        android:textSize="18sp"
        >

    </com.google.android.material.button.MaterialButton>

</RelativeLayout>