<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutRooms"
    android:layout_width="300dp"
    android:layout_height="120dp"
    android:layout_marginTop="10dp"
    android:backgroundTint="@color/hotel_row_background"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/roomBeds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/beds"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/roomBedSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/roomBeds"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toStartOf="@id/roomPricetxt"
            android:fontFamily="@font/inter_regular"
            android:text="@string/bed_size"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/roomCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/roomBedSize"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/capacity"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/roomSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/roomCapacity"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/availability"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/roomPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@id/roomBeds"
            android:fontFamily="@font/inter_regular"
            android:gravity="end"
            android:text="@string/_0"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/roomPricetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/roomPrice"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/inter_regular"
            android:gravity="end"
            android:text="@string/per_night"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>