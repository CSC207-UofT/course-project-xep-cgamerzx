<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_page_activities.ProfileFragment">

    <TextView
        android:id="@+id/profileTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/profile"
        android:textColor="@android:color/black"
        android:textSize="64sp" />

    <TextView
        android:id="@+id/isSignedIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="46dp"
        android:layout_below="@id/profileTxt"
        android:fontFamily="@font/inter_bold"
        android:text="@string/you_must_sign_in_to_view_this_content"
        android:textColor="@android:color/black"
        android:visibility="gone"
        android:textSize="24sp" />

    <Button
        android:id="@+id/toRegisterActivBtn"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="201dp"
        android:layout_marginTop="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:fontFamily="@font/inter_bold"
        android:padding="0dp"
        android:text="@string/register"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/toLoginActivBtn"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="308dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:fontFamily="@font/inter_bold"
        android:padding="4dp"
        android:text="@string/sign_in"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/signOutBtn"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="281dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="1dp"
        android:background="?android:attr/selectableItemBackground"
        android:fontFamily="@font/inter_bold"
        android:text="@string/sign_out"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <RelativeLayout
        android:id="@+id/signedInContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileTxt"
        android:visibility="gone">

        <TextView
            android:id="@+id/userIdTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/username"
            android:textColor="@android:color/black"
            android:textSize="34sp" />

        <Button
            android:id="@+id/editUserBtn"
            android:layout_width="285dp"
            android:layout_height="65dp"
            android:layout_below="@id/userIdTxt"
            android:layout_marginStart="46dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/hotel_row_background"
            android:fontFamily="@font/inter_regular"
            android:gravity="start|center_vertical"
            android:text="@string/edit_user"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/managerStatus"
            android:layout_width="285dp"
            android:layout_height="65dp"
            android:layout_below="@id/editUserBtn"
            android:layout_marginStart="46dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/hotel_row_background"
            android:fontFamily="@font/inter_regular"
            android:gravity="start|center_vertical"
            android:text="@string/status_manager"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/listHotelBtn"
            android:layout_width="285dp"
            android:layout_height="65dp"
            android:layout_below="@id/managerStatus"
            android:layout_marginStart="46dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/hotel_row_background"
            android:fontFamily="@font/inter_regular"
            android:gravity="start|center_vertical"
            android:text="@string/list_a_hotel"
            android:textColor="@color/black" />

    </RelativeLayout>


</RelativeLayout>